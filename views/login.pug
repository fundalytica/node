extends layout

block content
    main.d-flex.flex-column.justify-content-center.text-center.p-4
        div.align-self-center.p-2
            h3(id="header").text-dark.mb-3 Please Log In

            form(id="login-form" method="POST" action="/login")
                input(type="email" name="email" placeholder="Email Address" required autofocus).form-control.form-control-lg.mb-3
                input(type="password" name="password" placeholder="Password" required).form-control.form-control-lg.mb-3

                button(id="submit" type="submit").btn.btn-lg.btn-primary Log In

                p(id='error').m-3.text-danger.d-none

                p.m-3
                    a(href="/signup" id="show-signup") Create New Account?

block scripts
    script(src='/javascripts/auth.js' type='module')