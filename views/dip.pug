extends layout

block links
    link(href='/stylesheets/dip.css' rel='stylesheet')

block scripts
    script(src='https://code.highcharts.com/highcharts.js')
    //- script(src='https://cdnjs.cloudflare.com/ajax/libs/highcharts/8.2.2/highcharts.js') //- cdnjs error in dependency
    //- script(src='https://cdnjs.cloudflare.com/ajax/libs/highstock/6.0.3/highstock.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js')
    script(src='/javascripts/dip.js' type='module')

block content
    main.text-center.p-4.d-flex.flex-column
        div
            p
                strong#title.red-600
            input#slider.slider(type="range" min="5" max="90", step="5").d-none
            p#subtitle.red-600
            p#dates.small

        #chart.d-none

        div
            #spinner.spinner-border.text-danger(role="status").d-none
                span.sr-only