header.sticky-top.bg-grey-800
    .d-flex.justify-content-between.align-items-center.py-2
        .d-flex.ms-3
            a(href='https://www.fundalytica.com')
                .d-flex.align-items-center
                    img.me-2(src='/images/logos/logo-bright.svg' alt='fundalytica logo' width="192" height="220")
                    p.m-0 Fundalytica
        .d-flex.me-3.my-2
            a(href='mailto:contact@fundalytica.com')
                .d-flex.align-items-center
                    i.me-2.fas.fa-paper-plane
                    p.m-0 Contact
            //- a(href='https://blog.fundalytica.com' target="_blank").ms-3
            //-     .d-flex.align-items-center
            //-         i.me-2.fas.fa-pen
            //-         p.m-0 Blog
            - var href = user ? '/logout' : '/login'
            - var cl = user ? '' : 'text-warning'
            - var name = (user && user.name) ? (' ' + user.name) : ''
            a(href=href).ms-3
                .d-flex.align-items-center(class=cl)
                    if(user)
                        i.me-2.fas.fa-door-open
                        p.m-0 Logout
                            span= name
                    else
                        i.me-2.fas.fa-door-closed
                        p.m-0 Login