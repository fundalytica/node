doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content="width=device-width")

        if(! title)
            title Fundalytica
        else
            title= 'Fundalytica - ' + title

        include includes/matomo.pug
        include includes/social.pug
        include includes/favicon.pug

        //- boostrap
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")

        //- font awesome icons: instagram icon, mail icon, subscribe icon, login icon, arrow icon, table icon, ...
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.3/css/all.min.css')

        //- https://htmlcolorcodes.com/
        link(href='/stylesheets/material_design_bg_colors_full.css' rel='stylesheet')
        link(href='/stylesheets/material_design_colors_full.css' rel='stylesheet')

        link(href='/stylesheets/style.css' rel='stylesheet')

        block links

        block style

    body.d-flex.flex-column.bg-amber-50
