extends layout

block content
    main.d-flex.flex-column.justify-content-center.text-center.p-4
        div.align-self-center.p-2
            h3(id="header").text-dark.p-0.m-0.mb-3 Please Sign Up

            form(id="signup-form" method="POST" action="/signup")
                input(type="email" name="email" placeholder="Email Address" required autofocus).form-control.form-control-lg.mb-3
                input(type="password" name="password" placeholder="Password" required).form-control.form-control-lg.mb-3
                input(id="name" type="name" name="name" placeholder="Name" required).form-control.form-control-lg.mb-3

                button(id="submit" type="submit").btn.btn-lg.btn-primary Sign Up

                p(id='error').m-3.text-danger.d-none

                p.m-3
                    a(href="/login" id="show-login") Have Account Already?

            //- error handling
            //- if error
            //-     p.text-danger= error

block scripts
    script(src='/javascripts/auth.js' type='module')